{
  "name": "files-app",
  "version": "1.0.0",
  "description": "This app can list files/directories that are located in a given directory and also allows an option to change extensions of those files.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "format": "npm run prettier:fix && npm run lint:fix && npm run prettier:fix",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoseManuelSalazar/node-files-app.git"
  },
  "author": "manusdev",
  "bugs": {
    "url": "https://github.com/JoseManuelSalazar/node-files-app/issues"
  },
  "homepage": "https://github.com/JoseManuelSalazar/node-files-app#readme",
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@types/node": "^20.12.7",
    "eslint": "9.0.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5"
  },
  "dependencies": {
    "get-folder-size": "^4.0.0",
    "picocolors": "1.0.0"
  }
}
